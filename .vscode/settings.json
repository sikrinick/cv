{
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-xelatex",
                "-synctex=1",
                "-file-line-error",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.outDir": "%DIR%/output/pdf/%DOCFILE%",
    "languageTool.language":"en",
    "commentTranslate.targetLanguage": "en"
}